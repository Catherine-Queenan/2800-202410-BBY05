<!--Forgotten password page-->
<%- include("templates/header") %>
<div class="profile-container my-4 mx-4">
    <h1 class="text-center my-4 yeseva-one">Forgot Password</h1>
    <p class="text-center karla-heavy">Please enter your email address to receive a confirmation code.</p>
    <% if (errorMessage) { %>
        <div class="error-message"><%= errorMessage %></div>
    <% } %>
    <form method="post">
        <input type="text" name="email" class="my-2" placeholder="Email">
        <%- include('templates/button', {action:'/emailConfirmation',xClasses:'',xAttributes:'',content:'Confirm'}) %>
    </form>
</div>
<%- include("templates/footerCopyright") %>