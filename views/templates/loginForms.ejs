<div class="login-wrap" style="background: url('images/BeachPaws.png') center no-repeat; background-size:cover;">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
        <label for="tab-1" class="tab"><%= login %></label>
        <input id="tab-2" type="radio" name="tab" class="sign-up">
        <label for="tab-2" class="tab"><%= signup %></label>
        <div class="login-form">
            <div class="sign-in-htm">
                <form id="loginForm" method="post">
                    <div class="group">
                        <label for="email" class="label"><%= loginEmail %></label>
                        <input id="email" type="email" class="input">
                    </div>
                    <div class="group">
                        <label for="pass" class="label"><%= loginPassword %></label>
                        <input id="pass" type="password" class="input">
                    </div>
                    <div class="group">
                        <input id="check" type="checkbox" class="check" checked>
                        <label for="check"><span class="icon"></span> Keep me Signed in</label>
                    </div>
                    <div class="group">
                        <%- include('button', {action:'/submitLogin/client',xClasses:'button',xAttributes:'id=loginSubmit',content:'Submit'}) %>
                    </div>
                </form>
                <form method="get"></form>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a href="#forgot">Forgot Password?</a>
                    </div>
                </form>
            </div>
            <div class="sign-up-htm">
                <form id="signupForm" method="post">
                    <div class="group">
                        <label for="firstnameField" class="label"><%= firstName %></label>
                        <input name="firstName" id="firstnameField" type="text" class="input">
                    </div>
                    <div class="group">
                        <label for="lastnameField" class="label"><%= lastName %></label>
                        <input name="lastName" id="lastnameField" type="text" class="input">
                    </div>
                    <div class="group">
                        <label for="emailField" class="label"><%= signupEmail %></label>
                        <input name="email" id="emailField" type="email" class="input">
                    </div>
                    <div class="group">
                        <label for="phoneField" class="label"><%= phone %></label>
                        <input name="phone" id="phoneField" type="tel" class="input">
                    </div>
                    <div class="group">
                        <label for="passwordField" class="label"><%= signupPass %></label>
                        <input name="password" id="passwordField" type="password" class="input">
                    </div>
                    <div class="group">
                        <label for="confirmPasswordField" class="label"><%= confirmPass %></label>
                        <input name="confirmPassword" id="confirmPasswordField" type="password" class="input">
                        <small id="passwordWarning"></small>
                    </div>
                    <div class="group">
                        <%- include('button', {action:'/submitSignup/client',xClasses:'button',xAttributes:'id=signUpSubmit disabled',content:'Submit'}) %>
                        <!-- <button id="signUpSubmit" formaction="/submitSignup/client" disabled>Submit</button> -->
                    </div>
                </form>
                <form method="get">
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <label for="tab-1">Already a Member?</a>
                </form>
            </div>
            </div>
        </div>
    </div>
</div>

