<%- include("templates/header") %>
<div class="m-3">
<%- include('templates/defaultingPic', {pic: user.profilePic, picId:'profilePic'})%>
    <form method="post" enctype="multipart/form-data">
        <%- include('templates/uploadFile', {divId:'newProfilePic', xDivAttributes:'style=display:none', fileId:'profilePicInput',fileName:'accountUpload', label:'Upload a New Photo:', xfileAttributes:'accept=.png,.jpg, .jpeg'}) %>
            
        <input name="firstName" type="text" class="profileInfo col-3" value="<%= user.firstName %>" disabled>
        <input name="lastName" type="text" class="profileInfo col-3" value="<%= user.lastName %>" disabled> <br><br>
        <input name="email" type="email" class="col-6" value="<%= user.email %>" disabled><br><br>
        <input name="phone" type="tel" class="profileInfo col-6" value="<%= user.phone %>" disabled>

        <%- include('templates/button', {action:'',xClasses:'cancelButton',xAttributes:'id=cancelEdit type=button style=display:none',content:'Cancel'}) %>
        <%- include('templates/button', {action:'/profile/edit/clientProfile',xClasses:'',xAttributes:'id=saveButton style=display:none',content:'Save'}) %>
        <%- include('templates/button', {action:'',xClasses:'',xAttributes:'type=button id=editButton',content:'Edit'})%>
    </form> 

   <br><br>
	<div id="dogSection">
        <h3><%=userName%>'s Dogs:</h3>
        <% for(let i = 0; i < dogs.length; i++){ %>
            <%- include('templates/dog', {dog: dogs[i]}) %>
        <%} %>
        <br>

    <form>
        <%- include('templates/button', {action:'/addDog',xClasses:'',xAttributes:'',content:'Add New Dog'}) %>
    </form>
    
    <form method="get">
        <%- include('templates/button', {action:'/accountDeletion',xClasses:'',xAttributes:'',content:'Delete Account'}) %>
    </form>
	</div>	
    </div>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/scripts/editProfile.js"></script>
