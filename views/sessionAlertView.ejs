<!--Alert page for session requests on the business side.-->
<%- include("templates/header") %>
<div class="profile-container my-4 mx-4">
    <h1 class="text-center mb-4 yeseva-one">Session Request</span> from <%=alert.client%></h1>
    <h4 class="karla-heavy">They are interested in booking the following session: </h4>
    <form method="post" class="my-3 d-flex justify-content-between">
        <%- include('templates/button', {action:'/resolveSessionAlert/' + alert._id,xClasses:'btn-danger',xAttributes:'name=resolve value=reject',content:'Reject'}) %>
        <%- include('templates/button', {action:'/resolveSessionAlert/' + alert._id,xClasses:'',xAttributes:'name=resolve value=accept',content:'Accept Request'}) %>
    </form>
    <div class="card m-2 smallShadow" style="cursor:default">
        <p class="karla-heavy">Title: <span class="fw-bold"><%=alert.title%></span></p>
        <p class="karla-heavy">Start: <span class="fw-bold"><%=alert.start%></span></p>
        <p class="karla-heavy">End: <span class="fw-bold"><%=alert.end%></span></p>
        <p class="karla-heavy">Info: <span class="fw-bold"><%=alert.info%></span></p>
    </div>
</div>
<%- include("templates/footerCopyright") %>